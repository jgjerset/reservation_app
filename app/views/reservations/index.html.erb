
<h1>Reservation Listing</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Phone</th>
    <th></th>
    <th></th>
  </tr>

<% @reservations.each do |reservation| %>
  <tr>
    <td><%= reservation.startdate.strftime("%m/%d/%y") %></td>
    <td><%= reservation.enddate.strftime("%m/%d/%y") %></td>
    <td><%= reservation.first_name %></td>
    <td><%= reservation.last_name %></td>
    <td><%= reservation.email %></td>
    <td><%= reservation.phone %></td>
    <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
    <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @reservations %>